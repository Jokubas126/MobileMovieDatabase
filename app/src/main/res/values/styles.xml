<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Welcome Activity -->

    <style name="WelcomeActivityTitle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Navigation Menu Layout -->

    <style name="TitleHeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemCategoryTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ItemTextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/navigationViewItem</item>
    </style>

    <!-- Categories Fragment -->

    <style name="MainCategoryTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubcategoryTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSubcategoryText</item>
    </style>

    <!-- Movie Grid Fragment -->

    <style name="TitleCard">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/cardTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentCard">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cardContent</item>
    </style>

    <!-- Movie Details general style options -->

    <style name="SectionTitleDetails">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Movie Overview Fragment -->

    <style name="TitleOverview">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/detailsTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentOverview">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/detailsContent</item>
    </style>

    <style name="DescriptionDetails">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/detailsDescription</item>
    </style>

    <!-- Movie Cast Fragment -->

    <style name="PersonName">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/personDetails</item>
    </style>

    <style name="PersonPosition">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/personDetails</item>
    </style>

</resources>
