<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/restMovieGridFragment">

    <!-- MOVIE GRID FRAGMENTS -->

    <fragment
        android:id="@+id/restMovieGridFragment"
        android:name="com.example.mmdb.ui.movielists.rest.RestMovieGridFragment"
        android:label="RestMovieGridFragment"
        tools:layout="@layout/fragment_movies_grid">
        <action
            android:id="@+id/actionMovieDetails"
            app:destination="@id/movieDetails" />
        <argument
            android:name="movie_grid_type"
            android:defaultValue="type"
            app:argType="string" />
        <argument
            android:name="key_category"
            android:defaultValue="popular"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="search_query"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="start_year"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="end_year"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="discover_name_array"
            android:defaultValue="@null"
            app:argType="string[]"
            app:nullable="true" />
        <argument
            android:name="genre_id"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="language_key"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <!-- PERSONAL LISTS -->

    <navigation
        android:id="@+id/customLists"
        app:startDestination="@id/customListsFragment">
        <fragment
            android:id="@+id/movieGridFragment"
            android:name="com.example.mmdb.ui.movielists.personal.customlists.moviegrid.MovieGridFragment"
            android:label="Personal Movie List"
            tools:layout="@layout/fragment_movies_grid">
            <action
                android:id="@+id/actionMovieDetails"
                app:destination="@id/movieDetails" />
            <argument
                android:name="movieListId"
                app:argType="long" />
            <argument
                android:name="movieListTitle"
                app:argType="string"
                app:nullable="true" />

        </fragment>
        <fragment
            android:id="@+id/customListsFragment"
            android:name="com.example.mmdb.ui.movielists.personal.customlists.CustomListsFragment"
            android:label="Custom lists"
            tools:layout="@layout/fragment_custom_lists">
            <action
                android:id="@+id/movieGridFragment"
                app:destination="@id/movieGridFragment" />
        </fragment>
    </navigation>

    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.example.mmdb.ui.movielists.personal.watchlist.WatchlistFragment"
        android:label="Watchlist"
        tools:layout="@layout/fragment_movies_grid">
        <action
            android:id="@+id/actionMovieDetails"
            app:destination="@id/movieDetails" />
    </fragment>

    <!-- MOVIE DETAILS -->

    <navigation
        android:id="@+id/movieDetails"
        android:label="movieDetails"
        app:startDestination="@id/movieOverview">
        <argument
            android:name="movieRemoteId"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="movieLocalId"
            android:defaultValue="0"
            app:argType="integer" />
        <fragment
            android:id="@+id/movieOverview"
            android:name="com.example.mmdb.ui.details.overview.OverviewFragment"
            android:label="Overview"
            tools:layout="@layout/fragment_movie_overview">
            <argument
                android:name="movieRemoteId"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="movieLocalId"
                android:defaultValue="0"
                app:argType="integer" />
        </fragment>
        <fragment
            android:id="@+id/movieMedia"
            android:name="com.example.mmdb.ui.details.media.MediaFragment"
            android:label="Media"
            tools:layout="@layout/fragment_movie_media">
            <argument
                android:name="movieRemoteId"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="movieLocalId"
                android:defaultValue="0"
                app:argType="integer" />
        </fragment>
        <fragment
            android:id="@+id/movieCast"
            android:name="com.example.mmdb.ui.details.credits.CreditsFragment"
            android:label="Cast and Crew"
            tools:layout="@layout/fragment_movie_cast">
            <argument
                android:name="movieRemoteId"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="movieLocalId"
                android:defaultValue="0"
                app:argType="integer" />
        </fragment>
        <action
            android:id="@+id/action_movie_cast"
            app:destination="@id/movieCast"
            app:popUpTo="@id/movieOverview"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_movie_media"
            app:destination="@id/movieMedia"
            app:popUpTo="@id/movieOverview"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/actionMovieOverview"
            app:destination="@id/movieOverview"
            app:popUpTo="@id/movieOverview"
            app:popUpToInclusive="true" />

    </navigation>

    <!-- MOVIE CATEGORIES -->

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.mmdb.ui.categories.CategoriesFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_categories">
        <action
            android:id="@+id/actionRemoteMovieGridFragment"
            app:destination="@id/restMovieGridFragment" />
    </fragment>

    <!-- ABOUT -->

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.mmdb.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <!-- GLOBAL ACTIONS -->

    <action
        android:id="@+id/actionGlobalCustomListsFragment"
        app:destination="@id/customLists" />
    <action
        android:id="@+id/actionGlobalRemoteMovieGridFragment"
        app:destination="@id/restMovieGridFragment" />
    <action
        android:id="@+id/action_global_watchlistFragment"
        app:destination="@id/watchlistFragment" />
    <action
        android:id="@+id/action_global_aboutFragment"
        app:destination="@id/aboutFragment" />
    <action
        android:id="@+id/actionGlobalCategoriesFragment"
        app:destination="@id/categoriesFragment" />

</navigation>