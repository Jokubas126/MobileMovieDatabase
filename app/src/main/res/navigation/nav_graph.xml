<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/titleScreenFragment">

    <fragment
        android:id="@+id/titleScreenFragment"
        android:name="com.example.moviesearcher.view.TitleScreenFragment"
        android:label="fragment_title_screen"
        tools:layout="@layout/fragment_title_screen">
        <action
            android:id="@+id/actionMoviesList"
            app:destination="@id/moviesList" />
    </fragment>

    <fragment
        android:id="@+id/moviesList"
        android:name="com.example.moviesearcher.view.MoviesGridFragment"
        android:label="fragment_all_movies_list"
        tools:layout="@layout/fragment_movies_list">
        <action
            android:id="@+id/actionMovieTypeList"
            app:destination="@id/movieTypeList" />
        <action
            android:id="@+id/actionSettings"
            app:destination="@id/settings" />
        <action
            android:id="@+id/actionMovieDetails"
            app:destination="@id/movieDetails" />
    </fragment>

    <fragment
        android:id="@+id/movieTypeList"
        android:name="com.example.moviesearcher.view.MovieTypeListFragment"
        android:label="fragment_movie_type_list"
        tools:layout="@layout/fragment_movie_type_list">
        <action
            android:id="@+id/actionMoviesList"
            app:destination="@id/moviesList" />
    </fragment>

    <fragment
        android:id="@+id/settings"
        android:name="com.example.moviesearcher.view.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/actionMoviesList"
            app:destination="@id/moviesList" />
    </fragment>
    <fragment
        android:id="@+id/movieDetails"
        android:name="com.example.moviesearcher.view.details.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details">
        <action
            android:id="@+id/actionMoviesList"
            app:destination="@id/moviesList" />
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>