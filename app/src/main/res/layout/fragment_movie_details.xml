<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MovieDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_image_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:src="@drawable/avengers_cover"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avengers: Endgame"
                    android:textAppearance="@style/TitleDetails"/>

                <TextView
                    android:id="@+id/movie_year_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019"
                    android:textAppearance="@style/ContentDetails" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/IMDb_beginning"
                        android:textAppearance="@style/ContentDetails"/>

                    <TextView
                        android:id="@+id/movie_score_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.7"
                        android:textAppearance="@style/ContentDetails" />

                </LinearLayout>

                <TextView
                    android:id="@+id/movie_genre_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action, Sci-Fi, Comedy"
                    android:textAppearance="@style/ContentDetails" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textAppearance="@style/ContentDetails"/>

            <TextView
                android:id="@+id/movie_description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some random description text about movie, which can be as long as it needs to be."
                android:textAppearance="@style/DescriptionDetails"/>

        </LinearLayout>



    </LinearLayout>
</FrameLayout>