<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="movie"
            type="com.example.moviesearcher.model.data.Movie" />
        <variable
            name="listener"
            type="com.example.moviesearcher.view.grid.MovieClickListener" />

    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorCardBackground">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{listener::onMovieClicked}"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movie_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(movie.id)}"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/movie_poster_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:adjustViewBounds="true"
                        android:gravity="center_horizontal"
                        android:imageUrl="@{movie.posterImageUrl}"
                        android:src="@drawable/empty_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/movie_title_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{movie.title}"
                            android:textAppearance="@style/TitleCard" />

                        <TextView
                            android:id="@+id/movie_release_date_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{movie.releaseDate}"
                            android:textAppearance="@style/ContentCard" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/movie_score_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{movie.score}"
                                android:textAppearance="@style/ContentCard" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/score_ending"
                                android:textAppearance="@style/ContentCard" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/movie_genre_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{movie.genres}"
                            android:textAppearance="@style/ContentCard" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>